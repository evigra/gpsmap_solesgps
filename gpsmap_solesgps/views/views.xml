<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_gpsmap_vehicle_tree_inherit" model="ir.ui.view">
        <field name="name">gpsmap.vehicle.tree</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='model_id']" position="before">            
                <field name="company_id"/>                
                <field name="economic_number"/>
            </xpath> 
        </field>
    </record>

    <record id="gpsmapsoles_tc_devices_view_form_inherit" model="ir.ui.view">
        <field name="name">gpsmap_soles.tc_devices.form_inherit</field>
        <field name="model">tc_devices</field>
        <field name="inherit_id" ref="gpsmap.tc_devices_view_form"/>
        <field name="arch" type="xml">               
            <xpath expr="//group/field[@name='uniqueid']" position="before">
                <field name="company_ids"  widget="many2many_tags"/>                
            </xpath> 
        </field>
    </record>        

    <!-- GEOFENCE -->

    <record id="gpsmap_geofence_view_form_inherit" model="ir.ui.view">
        <field name="name">gpsmap.geofence.form_inherit</field>
        <field name="model">gpsmap.geofence</field>
        <field name="inherit_id" ref="gpsmap.gpsmap_geofence_view_form"/>
        <field name="arch" type="xml">               
            <xpath expr="//header/button[@id='action_clearpoint']" position="before">            
                <field name="company_ids" widget="many2many_tags"/>                
            </xpath> 
        </field>
    </record>        

    <record id="gpsmap_geofence_device_view_form_inherit" model="ir.ui.view">
        <field name="name">gpsmap.geofence_device.form_inherit</field>
        <field name="model">gpsmap.geofence_device</field>
        <field name="inherit_id" ref="gpsmap.gpsmap_geofence_device_view_form"/>
        <field name="arch" type="xml">               
            <xpath expr="//group/field[@name='description']" position="before">            
                <field name="company_ids" widget="many2many_tags"/>                
            </xpath> 
        </field>
    </record>  

    <record id="gpsmap_route_view_form_inherit" model="ir.ui.view">
        <field name="name">gpsmap.route.form_inherit</field>
        <field name="model">gpsmap.route</field>
        <field name="inherit_id" ref="gpsmap.gpsmap_route_view_form"/>
        <field name="arch" type="xml">               
            <xpath expr="//header/button[@id='action_clearpoint']" position="before">            
                <field name="company_ids" widget="many2many_tags"/>                
            </xpath> 
        </field>
    </record>        


    <record id="gpsmap_route_view_form_inherit" model="ir.ui.view">
        <field name="name">gpsmap.route.form_inherit</field>
        <field name="model">gpsmap.route</field>
        <field name="inherit_id" ref="gpsmap.gpsmap_route_view_form"/>
        <field name="arch" type="xml">               
            <xpath expr="//header/button[@id='action_clearpoint']" position="before">            
                <field name="company_ids" widget="many2many_tags"/>                
            </xpath> 
        </field>
    </record>        


    
</odoo>
