        <record id="rule_fleet_vehicle_admin2" model="ir.rule">
            <field name="name">Admin has all rights on vehicle</field>
            <field name="model_id" ref="model_fleet_vehicle"/>
            <field name="groups" eval="[(4, ref('gpsmapsolesgps_group_admin2'))]"/>
            <field name="domain_force">[('company_id.id','in',user.company_ids.ids)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>            
        </record>        

